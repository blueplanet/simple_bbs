.reply
  .pull-left.gravatar
    = image_tag "http://gravatar.com/avatar/aaaaaaaaaaaa.png", class: "img-circle"
  .infos
    .info
      span.name
        = link_to reply.author.name, reply.author
      = " #{time_ago_in_words(reply.updated_at)}#{t('.ago_replied')}"
      span.pull-right
        - if reply.author == user
          = link_to edit_topic_reply_path(topic, reply)
            i.icon-edit
            = t('.edit')
        '
        a[href="#"]
          i.icon-reply
    .body
      = reply.body
