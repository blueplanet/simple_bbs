.panel.panel-default
  .panel-body
    = form_for @topic, html: { class: "form-horizontal" } do |f|
      .form-group
        .col-lg-3
          = f.collection_select :node_id, @nodes, :id, :name, {}, {class: 'form-control' }
        .col-lg-9
          = f.text_field :title, placeholder: t('.title_placeholder'), class: 'form-control'
      .form-group
        = render "markdown_toolbar"
      .form-group
        .col-lg-12
          = f.text_area :body, { class: 'form-control markdown_editor', rows: 20 }
      .form-gorup
        = f.submit t('.save'), class: 'btn btn-primary'
